# ── Provider credentials ──────────────────────────
cloudflare_api_token  = ""
cloudflare_account_id = ""
vercel_api_token      = ""
vercel_team_id        = ""        # optional
upstash_api_key       = ""
upstash_email         = ""

# ── App config ────────────────────────────────────
app_url      = "https://your-project.vercel.app"  # find in Vercel dashboard > Domains
domain       = ""                      # custom domain, leave empty if not using one
docs_domain  = ""                      # leave empty to use terragon-docs.vercel.app
github_repo  = "your-org/terragon"
r2_public_url = "https://pub-xxxxx.r2.dev"

# ── R2 S3 credentials (create in CF dashboard after first apply) ──
r2_access_key_id     = ""
r2_secret_access_key = ""

# ── App secrets (generate with: openssl rand -hex 32) ──
better_auth_secret     = ""
encryption_master_key  = ""       # openssl rand -hex 16
internal_shared_secret = ""

# ── AI providers ──────────────────────────────────
anthropic_api_key = ""
openai_api_key    = ""

# ── Sandbox ───────────────────────────────────────
daytona_api_key = ""

# ── GitHub App ────────────────────────────────────
github_client_id       = ""
github_client_secret   = ""
github_app_id          = ""
github_app_private_key = ""       # PEM contents, use heredoc or file()
github_app_name        = ""
github_webhook_secret  = ""       # openssl rand -hex 32

# ── Broadcast (set after: cd apps/broadcast && npx partykit deploy) ──
broadcast_host = ""  # e.g. broadcast.your-account.partykit.dev

